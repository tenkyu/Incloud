@{
    ViewData["Title"] = "Home Page";
}

<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
    <div class="container">
        <h1 class="display-3 timer">0 sec</h1>
        <button class="btn btn-primary btn-lg start-timer-btn">Start</button>
        <button class="btn btn-primary btn-lg resume-timer-btn d-none">Resume</button>
        <button class="btn pause-timer-btn btn-lg d-none">Pause</button>
        <button class="btn btn-danger btn-lg remove-timer-btn d-none">Remove Timer</button>
        <button class="btn btn-success btn-lg finish-timer-btn d-none">Finish Timer</button>
    </div>
</div>

<div class="container">
    <!-- Example row of columns -->
    <div class="row">
        <div class="col-md-4">
            <h2>Book a timer</h2>
            <form id="bookForm" novalidate>
                <div class="form-group">
                    <label for="Description">Description (<span class="text-danger">*</span>)</label>
                    <textarea class="form-control" id="Description" name="Description" rows="3" placeholder=" what you are working on?" required></textarea>
                </div>
                <div class="form-group">
                    <label for="StartDate">Start Date</label>
                    <input type="datetime" class="form-control" id="StartDate" name="StartDate" />
                    <small class="form-text text-muted">Please enter if you started task before.</small>
                </div>
                <div class="form-group">
                    <label for="FinishDate">Finish Date</label>
                    <input type="datetime" class="form-control" id="FinishDate" name="FinishDate" />
                    <small class="form-text text-muted">Please enter if your task completed.</small>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="col-md-8">
            <h2>Reporting</h2>
            <table id="example" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Description</th>
                        <th>Start Date</th>
                        <th>Finish Date</th>
                        <th>Total Duration</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    <hr>

</div> <!-- /container -->
